<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">
    <fragment
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:name="com.example.lifelinefinally.ToolbarFragment"
        tools:layout="@layout/fragment_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <fragment
                android:id="@+id/pulse_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.example.lifelinefinally.ReportPulseFragment"
                tools:layout="@layout/fragment_pulse_report"/>
            <fragment
                android:id="@+id/pressure_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.example.lifelinefinally.ReportPressureFragment"
                tools:layout="@layout/fragment_pressure_report"/>
            <fragment
                android:id="@+id/temperature_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.example.lifelinefinally.ReportTemperatureFragment"
                tools:layout="@layout/fragment_temperature_report"/>
            <fragment
                android:id="@+id/sleep_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.example.lifelinefinally.ReportSleepFragment"
                tools:layout="@layout/fragment_sleep_report"/>
        </LinearLayout>
    </ScrollView>
    <fragment
        android:id="@+id/sections"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:name="com.example.lifelinefinally.SectionsFragment"
        tools:layout="@layout/fragment_sections"/>
</LinearLayout>